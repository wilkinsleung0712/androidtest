<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.topic2_test"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name="mad.topic2.lifecycle.test.LifecycleTestActivity">
            <intent-filter>

                <!-- MAIN entry point of the application -->
                <action android:name="android.intent.action.MAIN" />

                <!-- provide an icon in applications so it can be launched from device -->
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
            
        </activity>
        <activity android:name="mad.topic2.lifecycle.test.NextActivity">
        </activity>
        <activity android:name="mad.topic2.lifecycle.test.fragment.LifecycleTestActivity">
            <intent-filter>

                <!-- MAIN entry point of the fragement application -->
                <action android:name="android.intent.action.MAIN" />

                <!-- provide an icon in applications so it can be launched from device -->
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
            
        </activity>
        <activity android:name="mad.topic2.lifecycle.test.fragment.NextActivity"></activity>
     
    </application>

</manifest>
